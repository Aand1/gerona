<launch>
  <param name="use_sim_time" value="true" />
  
  <node name="xstage" pkg="xstage" type="xstage" args="$(env RABOT)/Config/Simulation/corridor_two_robots.world">
    <remap from="/robot_0/base_scan" to="/scan"/>
    <remap from="/robot_0/cmd_robot" to="/robot_0/ramaxx_cmd"/>
    <remap from="/robot_1/base_scan" to="/robot_1/scan"/>
    <remap from="/robot_1/cmd_robot" to="/robot_1/ramaxx_cmd"/>
  </node>

  <node pkg="tf" type="static_transform_publisher" name="robot_0_base_link_to_laser" args="0 0 0 0 0 3.141592654   /robot_0/base_link /robot_0/laser 100" />
  <node pkg="tf" type="static_transform_publisher" name="robot_1_base_link_to_laser"  args="0 0 0 0 0 3.141592654   /robot_1/base_link /robot_1/laser 100" />
  <node pkg="tf" type="static_transform_publisher" name="robot_0_to_robot_1"  args="0 -1 0 0 0 0   /robot_0/map /robot_1/odom 100" />


  <node pkg="hector_mapping" type="hector_mapping" name="robot_0_hector_mapping" output="screen">

    <!-- Frame names -->
    <param name="map_frame" value="/robot_0/map" />
    <param name="base_frame" value="/robot_0/base_link" />
    <param name="odom_frame" value="/robot_0/odom" />
    
    <!-- Tf use -->
    <param name="use_tf_scan_transformation" value="true"/>
    <param name="use_tf_pose_start_estimate" value="false"/>
    <param name="pub_map_odom_transform" value="true"/>
    
    <!-- Map size / start point -->
    <param name="map_resolution" value="0.10"/>
    <param name="map_size" value="2000"/>
    <param name="map_start_x" value="0.5"/>
    <param name="map_start_y" value="0.5" />
    <param name="map_multi_res_levels" value="2" />
    
    <!-- Map update parameters -->
    <param name="update_factor_free" value="0.4"/>
    <param name="update_factor_occupied" value="0.9" />    
    <param name="map_update_distance_thresh" value="0.4"/>
    <param name="map_update_angle_thresh" value="0.06" />
    
    <!-- Advertising config --> 
    <param name="advertise_map_service" value="true"/>
    
    <!-- Debug parameters -->
    <!--
      <param name="output_timing" value="false"/>
      <param name="pub_drawings" value="true"/>
      <param name="pub_debug_output" value="true"/>
    -->
  </node>
    
  <node name="motion_control" pkg="motion_control" type="motion_control" respawn="false" output="screen" >  

    <param name="waypoint_threshold" value="0.15" />
    <param name="max_waypoint_distance" value="0.25" />
    <param name="rowdetect/dualpid/Kp" value="1.0" />

  </node>

  <include file="$(find costmap)/launch/costmap_default.launch" />

  <!--<include file="$(find combined_planner)/launch/planner_default.launch" />-->

</launch>
